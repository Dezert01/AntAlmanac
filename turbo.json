{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "dev": {
            "cache": false
        },
        "start": {
            "cache": false
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["build/**"]
        },
        "deploy": {
            "dependsOn": ["build"],
            "cache": false
        },
        "format": {},
        "lint": {
            "dependsOn": ["format"]
        }
    }
}
